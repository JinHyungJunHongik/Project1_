<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/ll_itemMessage"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:visibility="gone">
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="15dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_sender"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher"
            />
    </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/cv_sender"
            app:layout_constraintTop_toTopOf="@+id/cv_sender"
            android:layout_marginStart="5dp"
            android:layout_marginTop="-14dp"
            android:textSize="12sp"
            android:text="양동원"/>
        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:maxWidth="250dp"
            android:layout_height="wrap_content"
            android:text="테스트 사이즈"
            android:textSize="14sp"
            android:padding="8dp"
            android:textStyle="bold"
            android:background="@drawable/chat_left"
            android:layout_marginStart="-15dp"
            android:layout_marginTop="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_itemMessage2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="end">

        <TextView
            android:id="@+id/tv_message2"
            android:layout_width="wrap_content"
            android:maxWidth="250dp"
            android:layout_height="wrap_content"
            android:text="테스트 사이즈"
            android:textSize="14sp"
            android:padding="8dp"
            android:textStyle="bold"
            android:background="@drawable/chat_left"
            android:layout_marginEnd="-5dp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/tv_sender2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/cv_sender"
            app:layout_constraintTop_toTopOf="@+id/cv_sender"
            android:layout_marginStart="5dp"
            android:layout_marginTop="-14dp"
            android:textSize="12sp"
            android:text="양동원"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_sender2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:cardCornerRadius="15dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_sender2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/dog3"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>